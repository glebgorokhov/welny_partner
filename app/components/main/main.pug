mixin main()
  +b.MAIN.main&attributes(attributes)
    block

mixin ui-kit-main()
  +ui-section
    +ui-section-head
      +ui-title Компонент main
      +ui-path
        p Компонент: components/main/main
      +ui-description
        p Описание компонента

    +ui-section-content()
      +main

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
