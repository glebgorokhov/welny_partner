mixin login(sent, editor)
  +b.SECTION.login&attributes(attributes)
    +e.header
      .container
        +e.H1.title!= editor ? 'Велни.Редактор' : 'Велни.Партнер'
        +e.P.subtitle Войдите в аккаунт

    +e.content
      +e.wrapper
        +e.logo
          img(src="assets/images/logo.svg" alt="Welny")

        +e.FORM.form(action="#" method="post" class=(editor ? '_editor' : false))
          if editor
            +inputbox
              +label Имя пользователя
              +input(type="text" name="name" placeholder="" required)

            +inputbox
              +label Пароль
              +input(type="password" name="pass" placeholder="" required)

          else
            if sent
              +inputbox
                +e.P.text Сообщение отправлено на номер <span>79177069050</span>
              +inputbox
                +label Код из смс
                +input(type="text" name="code" required)
                +e.P.text
                  a(href="#") Отправить код заново (45)

            else
              +inputbox
                +label Мобильный телефон
                +input(type="text" name="phone" placeholder="7хххххххххх" required)

          +inputbox._button
            +button('button')(type="submit")!= sent ? 'Войти' : 'Отправить код'

    +e.P.copyright © Welny 2019


mixin ui-kit-login()
  +ui-section
    +ui-section-head
      +ui-title Компонент login
      +ui-path
        p Компонент: components/login/login
      +ui-description
        p Описание компонента

    +ui-section-content()
      +login

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
